{{ 'section-product-reviews.css' | asset_url | stylesheet_tag }}

<div class="product-reviews section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="product-reviews__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading | escape }}
      </h2>
    {%- endif -%}

    <div class="product-reviews__container" data-product-reviews>
      {%- if section.settings.show_rating -%}
        <div class="product-reviews__rating">
          <div class="product-reviews__stars">
            {%- for i in (1..5) -%}
              <span class="product-reviews__star">â˜…</span>
            {%- endfor -%}
          </div>
          <span class="product-reviews__rating-text">Based on customer reviews</span>
        </div>
      {%- endif -%}

      <div class="product-reviews__list">
        <!-- Reviews will be loaded here via JavaScript or Shopify Reviews app -->
        <p class="product-reviews__placeholder">Customer reviews will appear here</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Customer Reviews",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "Show rating"
    }
  ],
  "presets": [
    {
      "name": "Product Reviews"
    }
  ]
}
{% endschema %}


