{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "text_block": {
          "type": "text",
          "settings": {
            "text": "Premium sustainable fashion crafted for the future."
          }
        },
        "title_block": {
          "type": "title",
          "settings": {}
        },
        "price_block": {
          "type": "price",
          "settings": {}
        },
        "variant_picker_block": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector_block": {
          "type": "quantity_selector",
          "settings": {}
        },
        "buy_buttons_block": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        },
        "sustainability_metrics_block": {
          "type": "sustainability_metrics",
          "settings": {
            "show_metrics": true
          }
        },
        "ar_tryon_block": {
          "type": "ar_tryon",
          "settings": {
            "enable_ar": true
          }
        },
        "description_block": {
          "type": "description",
          "settings": {}
        },
        "share_block": {
          "type": "share",
          "settings": {}
        }
      },
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "background-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": false,
        "enable_video_looping": false
      }
    },
    "product_recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "products_to_show": 4,
        "columns_desktop": 4,
        "image_ratio": "square",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false
      }
    },
    "reviews": {
      "type": "product-reviews",
      "settings": {
        "heading": "Customer Reviews",
        "show_rating": true
      }
    }
  },
  "order": [
    "main",
    "product_recommendations",
    "reviews"
  ]
}


